<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Plugin.Maui.Crosswind.Sample.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    StyleClass="bg-slate-100">

    <ScrollView>
        <VerticalStackLayout StyleClass="p-8,gap-6">
            <FlexLayout StyleClass="px-3,py-6,bg-slate-300,items-center">
                <Image Source="dotnet_bot.png" StyleClass="shrink-0,size-8,mr-2" />
                <VerticalStackLayout StyleClass="gap-0">
                    <Label StyleClass="text-xl,text-white" Text=".NET Bot" />
                    <Label StyleClass="text-red-800" Text="You have a new message!" />
                </VerticalStackLayout>
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
