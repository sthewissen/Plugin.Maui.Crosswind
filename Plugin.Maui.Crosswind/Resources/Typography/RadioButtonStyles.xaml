<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="Plugin.Maui.Crosswind.Resources.Typography.RadioButtonStyles">

    <!-- Text Size -->
    <Style Class="text-xs" TargetType="RadioButton">
        <Setter Property="FontSize" Value="{StaticResource SizeXs}" />
    </Style>
    <Style Class="text-sm" TargetType="RadioButton">
        <Setter Property="FontSize" Value="{StaticResource SizeSm}" />
    </Style>
    <Style Class="text-base" TargetType="RadioButton">
        <Setter Property="FontSize" Value="{StaticResource SizeMd}" />
    </Style>
    <Style Class="text-lg" TargetType="RadioButton">
        <Setter Property="FontSize" Value="{StaticResource SizeLg}" />
    </Style>
    <Style Class="text-xl" TargetType="RadioButton">
        <Setter Property="FontSize" Value="{StaticResource SizeXl}" />
    </Style>
    <Style Class="text-2xl" TargetType="RadioButton">
        <Setter Property="FontSize" Value="{StaticResource Size2Xl}" />
    </Style>
    <Style Class="text-3xl" TargetType="RadioButton">
        <Setter Property="FontSize" Value="{StaticResource Size3Xl}" />
    </Style>
    <Style Class="text-4xl" TargetType="RadioButton">
        <Setter Property="FontSize" Value="{StaticResource Size4Xl}" />
    </Style>
    <Style Class="text-5xl" TargetType="RadioButton">
        <Setter Property="FontSize" Value="{StaticResource Size5Xl}" />
    </Style>
    <Style Class="text-6xl" TargetType="RadioButton">
        <Setter Property="FontSize" Value="{StaticResource Size6Xl}" />
    </Style>

    <!-- Font Type -->
    <Style Class="font-sans" TargetType="RadioButton">
        <Setter Property="FontFamily" Value="Sans-Serif" />
    </Style>
    <Style Class="font-serif" TargetType="RadioButton">
        <Setter Property="FontFamily" Value="Serif" />
    </Style>
    <Style Class="font-mono" TargetType="RadioButton">
        <Setter Property="FontFamily" Value="Monospace" />
    </Style>

    <!-- Text Tranforms -->
    <Style Class="uppercase" TargetType="RadioButton">
        <Setter Property="TextTransform" Value="Uppercase" />
    </Style>
    <Style Class="lowercase" TargetType="RadioButton">
        <Setter Property="TextTransform" Value="Lowercase" />
    </Style>

    <!-- Letter Spacing -->
    <Style Class="tracking-tighter" TargetType="RadioButton">
        <Setter Property="CharacterSpacing" Value="-0.5" />
    </Style>
    <Style Class="tracking-tight" TargetType="RadioButton">
        <Setter Property="CharacterSpacing" Value="-0.25" />
    </Style>
    <Style Class="tracking-normal" TargetType="RadioButton">
        <Setter Property="CharacterSpacing" Value="0" />
    </Style>
    <Style Class="tracking-wide" TargetType="RadioButton">
        <Setter Property="CharacterSpacing" Value="0.25" />
    </Style>
    <Style Class="tracking-wider" TargetType="RadioButton">
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>
    <Style Class="tracking-widest" TargetType="RadioButton">
        <Setter Property="CharacterSpacing" Value="1.0" />
    </Style>

    <!-- Attributes & decorations -->
    <Style Class="italic" TargetType="RadioButton">
        <Setter Property="FontAttributes" Value="Italic" />
    </Style>

</ResourceDictionary>