<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="Plugin.Maui.Crosswind.Resources.CwFixedResources"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Text alignment has some weird issues when being set through CSS, so better to just define them here as resources.  -->

    <Style Class="text-left" TargetType="Label">
        <Setter Property="HorizontalTextAlignment" Value="Start" />
    </Style>
    <Style Class="text-right" TargetType="Label">
        <Setter Property="HorizontalTextAlignment" Value="End" />
    </Style>
    <Style Class="text-center" TargetType="Label">
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>
    <Style Class="text-justify" TargetType="Label">
        <Setter Property="HorizontalTextAlignment" Value="Justify" />
    </Style>
    <Style Class="text-top" TargetType="Label">
        <Setter Property="VerticalTextAlignment" Value="Start" />
    </Style>
    <Style Class="text-middle" TargetType="Label">
        <Setter Property="VerticalTextAlignment" Value="Center" />
    </Style>
    <Style Class="text-bottom" TargetType="Label">
        <Setter Property="VerticalTextAlignment" Value="End" />
    </Style>

    <Style Class="text-left" TargetType="Entry">
